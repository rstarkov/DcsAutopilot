<UserControl x:Class="DcsAutopilot.UiChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DcsAutopilot"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="lblChartInfo" TextWrapping="WrapWithOverflow" Margin="0,0,0,4" Grid.Row="0">Chart Info</TextBlock>
        <local:Chart x:Name="ctChart" Grid.Row="1"/>
    </Grid>
</UserControl>
